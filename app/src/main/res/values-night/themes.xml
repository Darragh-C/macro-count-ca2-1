<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Macro" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorOnSecondary">@color/grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ScreenBg">
        <item name="android:background">@color/black</item>
    </style>
    <style name="CardBg">
        <item name="android:background">@color/grey</item>
    </style>
    <style name="TextColour">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AltTextColour">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Macro.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Macro.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Macro.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>