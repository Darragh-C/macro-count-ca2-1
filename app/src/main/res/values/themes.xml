    -->

    <style name="Theme.Macro" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.Macro.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Macro.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Macro.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomButton">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:padding">1dp</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item> <!-- Apply the custom width -->
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="toggleStyle">
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/black</item>
    </style>

</resources>